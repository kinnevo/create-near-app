{
  "name": "create-near-app",
  "version": "2.0.0",
  "description": "generate new near blank project with different type",
  "main": "index.js",
  "files": [
    "common",
    "templates",
    "utils"
  ],
  "scripts": {
    "test": "node ./test/test-new-project.js",
    "lint": "eslint .",
    "fix": "eslint . --fix",
    "release": "release-it"
  },
  "repository": "https://github.com/near/create-near-app.git",
  "author": "Yifang Ma <yifang@near.org>",
  "license": "(MIT AND Apache-2.0)",
  "keywords": [
    "nearprotocol",
    "near-protocol",
    "assemblyscript",
    "rust",
    "react",
    "smart-contract",
    "blockchain"
  ],
  "bugs": "https://github.com/near/create-near-app/issues",
  "bin": {
    "create-near-app": "index.js"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "cross-spawn": "^7.0.3",
    "mixpanel": "^0.14.0",
    "ncp": "^2.0.0",
    "os": "^0.1.2",
    "replace-in-files": "^3.0.0",
    "shelljs": "^0.8.5",
    "which": "^2.0.2",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@release-it/conventional-changelog": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "babel-eslint": "10.x",
    "eslint": "7.32.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-flowtype": "8.0.3",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "4.5.0",
    "husky": "^8.0.1",
    "release-it": "^15.0.0",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">=16"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0
      ]
    }
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  }
}
